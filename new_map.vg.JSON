{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Country Data Visualization with Value Size and Location",
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_oceans"}
        },
        "mark": {"type": "geoshape", "fill": "blue", "stroke": "white"}
      },
      {
        "data": {
          "url": "map_one.csv",
          "format": {"type": "csv"}
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}, "size":100},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
   
          "color": {
            "condition": {
              "test": "datum.Value > 0",
              "value": "green" 
            },
            "value": "red"
          },
          "tooltip": [
            {"field": "Country_Name", "type": "nominal", "title": "Country"},
            {
                "field": "Value",
                "type": "quantitative",
                "title": "Change in Currency %",
                "format": ".2f" 
              }
          ]
        }
      }
    ]
  }
  