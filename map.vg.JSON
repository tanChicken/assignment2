{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 700,
  "autosize":"fit-y",
  "title": {
    "text": "Effective Exchange Rate From Sep 2023 to Sep 2024",
    "fontSize": 20,
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Cian2001/irs_datasets/main/world_map.json",
    "format": {"property": "features"}
  },
  "projection": {
    "scale": 170,
    "type": "mercator"
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "key": "Country_Name",
        "fields": ["Value"],
        "data": {
          "url": "map_one.csv",
          "format": {"type": "csv"}
        }
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "#000000",
    "strokeWidth": 0.3,
    "opacity": 1
  },
  "encoding": {
    "color": {
      "field": "Value",
      "type": "quantitative",
      "scale": {
            "domain": [-2, -0.5, 5, 10],
            "range": ["#d73027", "#fee08b", "#d9ef8b", "#1a9850"] 
        },
      "legend": {
        "title": "Depreciation Appriciation",
        "titleFontSize": 9,
        "labelFontSize": 10,
        "orient": "bottom-right"
      }
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {
        "field": "Value",
        "type": "quantitative",
        "format": ".2f",
        "title": "Effective Exchange Rate"
      }
    ]
  },
  "config": {
    "background": "#ADD8E6",
    "view": {
      "stroke": "#ddd"
    },
    "mark": {
      "invalid": "#ddd"
    },
    "legend": {
      "titleFontSize": 14,
      "labelFontSize": 12,
      "symbolSize": 60,
      "padding": 10
    }
  }
}

  